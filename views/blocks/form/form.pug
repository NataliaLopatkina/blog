mixin form(obj)
    div(class="form")&attributes(attributes)
        form(class="form__content" onsubmit="return false" novalidate)
            h1(class="form__title") !{obj.title}
            if (obj.signIn)
                div(class="incorrected")
                    span(class="incorrected__text") Incorrected email or password!
                    button(class="incorrected__button") X
            if (obj.signUp)
                div(class="incorrected")
                    span(class="incorrected__text") User with the same name already exists.
                    button(class="incorrected__button") X
                div(class="form__item")
                    label(for="name" class="form__label") !{obj.labelUser}
                    input(type="text" class="form__input" id="name" placeholder="John" required)
                    span(class="error") Name is require!
            div(class="form__item")
                label(for="email" class="form__label") !{obj.labelEmail}
                input(type="email" class="form__input" id="email" placeholder="john@yandex.ru" required)
                span(class="error") Email is require!
            div(class="form__item")
                label(for="password" class="form__label") !{obj.labelPassword}
                div(class="form__password")
                    input(type="password" class="form__input" id="password" placeholder="12345678" minlength="6" required)
                    span(class="error") Password is require!
                    button(class="form__password-button" button="type")
                        img(class="form__password-img" src="images/svg-icon/eye.svg" alt="Show password")
                    span(class="form__notes") Minimum password length 6 characters

            include ../button/button.pug
            +button({
                type: "submit",
                text: "Send",
            })(class="form__button-send")

    // END .form

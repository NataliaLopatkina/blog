mixin nav(activeElement)
    nav(class="nav")
        ul(class="nav__list")
            -
                var navList = [
                    {
                        text: "Home",
                        href: "/home",
                    },
                    {
                        text: "My posts",
                        href: "/my-posts",
                    },
                    {
                        text: "Friends posts",
                        href: "/friends-posts",
                    },
                    {
                        text: "Add post",
                        href: "/add-post",
                    },
                ]

            each item in navList
                - var modActive = ""
                if activeElement == item.text
                    - modActive = " nav__item--active"

                - var homePage = ""
                if activeElement == ""
                    - homePage = " nav__item--page-home"

                li(class="nav__item" + modActive + homePage)
                    a(href=item.href class="nav__link") !{item.text}
    // END .nav

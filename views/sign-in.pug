extends blocks/template-authentication/template-authentication.pug

block data
    -
        var data = {
            script: "sign-in",
        }

block content
    div(class="authentication authentication--position")
        include blocks/form/form.pug
        +form({
            title: "Sign-in",
            labelEmail: "Login or email",
            labelPassword: "Password",
        })

        include blocks/registration/registration.pug
        +registration({
            text: 'Create your own profile',
            buttonText: 'Sign-up',
        })
